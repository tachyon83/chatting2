<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>index.ejs</title>
    <script>
        window.onload = function () {
            const loginForm = document.getElementById('loginForm')
            const prevDiv = document.getElementById('prev')
            const signoutBtn = document.getElementById('signoutBtn')
            const signupBtn = document.getElementById('signupBtn')
            let nextRoute = null

            const user = "<%=user%>"

            if (user) {
                loginForm.style.display = 'none'
                prevDiv.innerText = user + ' 접속중'
                // prevDiv.children.item[1] = basicInfo.roomNumber
                signoutBtn.innerText = 'signout'
                nextRoute = '/user/signout/'
            } else {
                // btn.innerText = 'signin'
                // nextRoute = '/user/signin'
                signoutBtn.style.display = 'none'
                nextRoute = '/user/signuppage/'
            }

            signoutBtn.addEventListener('click', () => {
                window.location.replace(nextRoute + user)
            })
            signupBtn.addEventListener('click', () => {
                console.log('signupBtn clicked')
                window.location.replace(nextRoute)
            })
            // const urlParams = new URLSearchParams(window.location.search);
            // const mypID = urlParams.get('pID');
        }
    </script>
</head>

<body>
    <h1>this is main page (the first one)</h1>
    <form id='loginForm' action='/user/signin' method='POST'>
        username<input name='username' type='text'>
        password<input name='password' type='password'>
        <button type='submit'>signin</button>
    </form>
    <hr>
    <button id='signoutBtn'></button>
    <button id='signupBtn'>signup</button>
